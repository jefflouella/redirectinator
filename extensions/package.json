{
  "name": "redirectinator-advanced-extensions",
  "version": "1.0.0",
  "description": "Browser extensions for advanced redirect detection",
  "main": "index.js",
  "scripts": {
    "build": "npm run build:chrome && npm run build:firefox",
    "build:chrome": "cd chrome && zip -r ../redirectinator-advanced-chrome.zip .",
    "build:firefox": "cd firefox && zip -r ../redirectinator-advanced-firefox.zip .",
    "test": "npm run test:chrome && npm run test:firefox",
    "test:chrome": "cd chrome && npm test",
    "test:firefox": "cd firefox && npm test",
    "lint": "eslint chrome/src/*.js firefox/src/*.js shared/*.js",
    "lint:fix": "eslint chrome/src/*.js firefox/src/*.js shared/*.js --fix",
    "clean": "rm -f *.zip"
  },
  "keywords": [
    "redirect",
    "browser-extension",
    "chrome-extension",
    "firefox-addon",
    "web-analysis",
    "url-redirect"
  ],
  "author": "Redirectinator Team",
  "license": "MIT",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "jest-puppeteer": "^8.0.0",
    "puppeteer": "^19.0.0"
  },
  "jest": {
    "preset": "jest-puppeteer",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "chrome/src/**/*.js",
      "firefox/src/**/*.js",
      "shared/**/*.js"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "webextensions": true,
      "es2021": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "no-unused-vars": "warn",
      "no-console": "off"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/redirectinator.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/redirectinator/issues"
  },
  "homepage": "https://github.com/yourusername/redirectinator#readme",
  "dependencies": {
    "archiver": "^7.0.1"
  }
}
